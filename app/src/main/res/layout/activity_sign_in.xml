<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/signup_background"
    tools:context="com.example.alsist.SignIn">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/editText_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="109dp"
            android:ems="10"
            android:hint="NAME"
            android:textColorHint="@android:color/darker_gray"
            android:textColor="@android:color/darker_gray"
            android:backgroundTint="@android:color/darker_gray"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/login_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/editText_name"
            android:layout_alignStart="@+id/editText_name"
            android:layout_below="@+id/editText_name"
            android:layout_marginTop="34dp"
            android:ems="10"
            android:hint="E-mail"
            android:textColorHint="@android:color/darker_gray"
            android:textColor="@android:color/darker_gray"
            android:backgroundTint="@android:color/darker_gray"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/login_pw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/login_email"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="32dp"
            android:ems="10"
            android:hint="PASSWORD"
            android:textColorHint="@android:color/darker_gray"
            android:textColor="@android:color/darker_gray"
            android:backgroundTint="@android:color/darker_gray"
            android:inputType="textPassword" />

        <EditText
            android:id="@+id/pwchk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/login_pw"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="41dp"
            android:ems="10"
            android:hint="PASSWORD"
            android:textColorHint="@android:color/darker_gray"
            android:textColor="@android:color/darker_gray"
            android:backgroundTint="@android:color/darker_gray"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/button3"
            android:layout_width="210dp"
            android:layout_height="40dp"
            android:background="@drawable/siginup_button"
            android:layout_below="@+id/pwchk"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="29dp"
            android:onClick="onClick_sign"
            android:textColor="#3F3F3F"
            android:textSize="16dp"
            android:text="sign up" />

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
