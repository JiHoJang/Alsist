<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="com.example.alsist.MainActivity">

    <RelativeLayout
        android:layout_width="344dp"
        android:layout_height="495dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/login_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="214dp"
            android:ems="10"
            android:hint="ID"
            android:inputType="textPersonName"
            android:textColor ="@android:color/darker_gray"
            android:textColorHint="@android:color/darker_gray"
            android:backgroundTint="@android:color/darker_gray" />

        <EditText
            android:id="@+id/login_pw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/login_email"
            android:layout_alignStart="@+id/login_email"
            android:layout_below="@+id/login_email"
            android:layout_marginTop="19dp"
            android:ems="10"
            android:hint="PASSWORD"
            android:textColor ="@android:color/darker_gray"
            android:textColorHint="@android:color/darker_gray"
            android:backgroundTint="@android:color/darker_gray"
            android:inputType="textPassword" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="210dp"
            android:layout_height="193dp"
            android:layout_alignLeft="@+id/login_email"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/login_email"
            android:layout_marginTop="19dp"
            app:srcCompat="@drawable/login_logo"
            tools:layout_editor_absoluteX="75dp"
            tools:layout_editor_absoluteY="36dp" />

        <Button
            android:id="@+id/login"
            android:layout_width="210dp"
            android:layout_height="40dp"
            android:layout_below="@+id/login_pw"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="17dp"
            android:background="@drawable/login_button"
            android:text="Login"
            android:textColor="#3F3F3F"
            android:textSize="16dp" />

        <Button
            android:id="@+id/button5"
            android:layout_width="210dp"
            android:layout_height="40dp"
            android:layout_below="@+id/login"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/siginup_button"
            android:onClick="onClick_sign"
            android:text="Sign UP"
            android:textColor="#3F3F3F"
            android:textSize="16dp" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>

